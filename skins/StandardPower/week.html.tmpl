<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>$station.location Weekly energy summary</title>
    <link rel="stylesheet" type="text/css" href="weewx.css"/>
    <link rel="icon" type="image/png" href="favicon.ico" />
    <script type="text/javascript">
      function openURL(urlname)
      {
        window.location=urlname;
      }
    </script>
  </head>

  <body>
    <div id="container">
      <div id="masthead">
        <h1>$station.location</h1>
        <h2>Energy Summary for the Week</h2>
          <h2>$current.dateTime</h2>
      </div>

      <div id="stats_group">

        <div class="stats">
          <div class="stats_header">
            This Week
          </div>

          <table>
            <tbody>
              <tr>
                <td class="stats_label">Channel 1</td>
                <td class="stats_data">$week.ch1_a_energy2.diff</td>
              </tr>
              <tr>
                <td class="stats_label">Channel 2</td>
                <td class="stats_data">$week.ch2_a_energy2.diff</td>
              </tr>
              <tr>
                <td class="stats_label">Channel 3</td>
                <td class="stats_data">$week.ch3_a_energy2.diff</td>
              </tr>
              <tr>
                <td class="stats_label">Channel 4</td>
                <td class="stats_data">$week.ch4_a_energy2.diff</td>
              </tr>
              <tr>
                <td class="stats_label">Channel 5</td>
                <td class="stats_data">$week.ch5_a_energy2.diff</td>
              </tr>
              <tr>
                <td class="stats_label">Channel 6</td>
                <td class="stats_data">$week.ch6_a_energy2.diff</td>
              </tr>
              <tr>
                <td class="stats_label">Channel 7</td>
                <td class="stats_data">$week.ch7_a_energy2.diff</td>
              </tr>
              <tr>
                <td class="stats_label">Channel 8</td>
                <td class="stats_data">$week.ch8_a_energy2.diff</td>
              </tr>
            </tbody>
          </table>

        </div> <!-- End class "stats" -->

      </div> <!-- End class "stats_group" -->

      <div id="content">

        <div class="header">
          <h3>Weekly Statistics and Plots</h3>
        </div>
        <div id="plots">
          <img src="week_ch1_power.png"    alt="Channel 1" />
          <img src="week_ch2_power.png"    alt="Channel 2" />
          <img src="week_ch3_power.png"    alt="Channel 3" />
          <img src="week_ch4_power.png"    alt="Channel 4" />
          <img src="week_ch5_power.png"    alt="Channel 5" />
          <img src="week_ch6_power.png"    alt="Channel 6" />
          <img src="week_ch7_power.png"    alt="Channel 7" />
          <img src="week_ch8_power.png"    alt="Channel 8" />
        </div>
      </div> <!-- End id "content" -->

      <div id="navbar">
        <input type="button" value="   Current   " onclick="openURL('index.html')" />
        <input type="button" value="    Week     " onclick="openURL('week.html')" />
        <input type="button" value="    Month    " onclick="openURL('month.html')" />
        <input type="button" value="    Year     " onclick="openURL('year.html')" />
      </div>
    </div> <!-- End id "container" -->

  </body>
</html>
